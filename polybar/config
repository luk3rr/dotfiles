[module/player]
interval = 1
type = custom/script
format = <label>
format-prefix = "ï‹ "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/player.sh
format-underline = #00BFFF

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ï„‰ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #FFD700
label = %percentage:2%%

[module/date]
type = custom/script
interval = 1
format = <label>
format-prefix = "ï€— "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5
exec = ~/.config/polybar/calendar.sh

;[network-base]
;type = internal/network
;interval = 5
;format-connected = <label-connected>
;format-disconnected = <label-disconnected>
;label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
format-connected-underline = #8B0000
format-connected-prefix = "ï›¿ "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/bluetooth]
type = custom/script
exec = "bluetoothctl devices | cut -d' ' -f2 | xargs -i -n1 bash -c "bluetoothctl info {} | grep -q 'Connected: yes' && bluetoothctl info {} | grep -o 'Alias: .*'" | awk -vORS=', ' '{sub($1 OFS,"")}1' | sed -e 's/, $//'"
exec-if = "[ $(bluetoothctl show | grep 'Powered: yes' | wc -l) -gt 0 ]"
interval = 5
;click-right = blueman-manager &
format-prefix = "ïŠ” "
format-underline = #A0522D
format-prefix-foreground = ${colors.foreground-alt}
;label-connected = %bluetooth%
;format-disconnected = 

[module/wlan]
type = internal/network
;inherit = network-base
;interface-type = wireless
interface = wlp3s0
interval = 3.0
format-connected-underline = #A52A2A
format-connected-prefix = "ï‡« "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %essid%
format-disconnected = 

[module/ping]
interval = 10
type = custom/script
